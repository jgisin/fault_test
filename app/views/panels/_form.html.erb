
<%= form_for @panel, :html => {:class => "form-horizontal center"} do |f| %>
  <% if @panel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@panel.errors.count, "error") %> prohibited this panel from being saved:</h2>

      <ul>
      <% @panel.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
  <div class="form-group">
    <%= f.label :panel_name %><br>
    <%= f.text_field :panel_name, :size => 40 %>
  </div>
  <div class="form-group">
    <%= f.label :wire_length %><br>
    <%= f.text_field :wire_length %>
  </div>
  <div class="form-group">
    <%= f.label :init_fault, "Initial Fault Value" %><br>
    <%= f.text_field :init_fault %>
  </div>
  <div class="form-group">
    <%= f.label :runs %><br>
    <%= f.text_field :runs %>
  </div>
  <div class="form-group">
    <%= f.label :voltage %><br>
    <%= f.text_field :voltage %>
  </div>
  <div class="form-group">
    <%= f.label :c_value %><br>
    <%= f.text_field :c_value %>
  </div>
  <div class="row">
    <div class="col-lg-3">
    <div class="form-group">
    <%= f.label :project_id %><br>
    <%= f.select :project_id, Project.all.map {|p| [p.name, p.id]}, {}, {class: "form-control"} %>
  </div>
      <div class="form-group">
    <%= f.label :position %><br>
   <%= f.select :position, 1..@panel_count, {}, {class: "form-control"} %>
  </div>
</div>
</div>
  <div class="form-group">
    <%= f.submit 'Submit', {:class => 'btn btn-lg btn-success'} %>       <%= link_to "Back to Panels", {controller: "panels", action: "index",
 project_id: @project.id}, class: "btn btn-lg btn-default" %>
  </div>

    </div>
  </div>
</div>
<% end %>
