
<h1>Listing Panels</h1>
<%= link_to("Back to Projects", :controller => 'projects', :action => 'index') %>
<% @page_title = "Index" %>
<p class="notice"><%= notice %></p>
<h2>Panel Values</h2>
<table>
  <thead>
    <tr>
      <th>Panel Name</th>
      <th>Wire length</th>
      <th>Init fault</th>
      <th>Runs</th>
      <th>Voltage</th>
      <th>C value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @panels.each do |panel| %>
      <tr>
        <td><%= panel.panel_name %></td>
        <td><%= panel.wire_length %></td>
        <td><%= panel.init_fault %></td>
        <td><%= panel.runs %></td>
        <td><%= panel.voltage %></td>
        <td><%= panel.c_value %></td>
        <td><%= link_to 'Show', panel %></td>
        <td><%= link_to 'Edit', edit_panel_path(panel) %></td>
        <td><%= link_to 'Destroy', panel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Results</h2>
<table>
  <thead>
    <tr>
      <th>Panel Name</th>
      <th>F Value</th>
      <th>M Value</th>
      <th>Final Value</th>
    </tr>
  </thead>

  <tbody>
    <% @panels.each do |panel| %>
      <tr>
        <td><%= panel.panel_name %></td>
        <td><%= number_with_precision(panel.f_value, precision: 2) %></td>
        <td><%= number_with_precision(panel.m_value, precision: 2) %></td>
        <td><%= number_with_precision(panel.final_value, precision: 2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


<%= link_to("New Panel", {:action => 'new', :project_id => @project.id}, :class => 'action new') %>
