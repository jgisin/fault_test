<% @page_title = "Index" %>
<p class="notice"><%= notice %></p>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <p class="navbar-text">Currently logged in as: <b><%= session[:user_name].upcase %></b></p>
        </div>
                <div id="navbar" class="navbar-collapse collapse">
                  <form class="navbar-form navbar-right">
                    <div class="form-group">
            <%= form_tag(:controller => 'access', :action => 'attempt_login') do %>
            
              <%= text_field_tag 'user_name', nil, class: "form-control", placeholder: "Username" %>
            </div>
            <div class="form-group">
              <%= password_field_tag 'password', nil, class: "form-control", placeholder: "Password" %>
            </div>
            <%= submit_tag "Log In", class: "btn btn-success" %>
              <% end %>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
<div class="jumbotron">
  <div class="container">
    <div class="row">
    <h1>Panels</h1>
  </div>
</div>
</div>
<div class="container">
<%= link_to "New Panel", {action: "new", project_id: @project.id}, class: "btn btn-md btn-success" %>
<%= link_to "Back to Projects", {controller: "projects", action: "index",
 user_id: @project.user_id}, class: "btn btn-md btn-default" %>
</div>
<div class="container">
  <div class="row">
  <h2>Panel Values</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Panel Name</th>
        <th>Wire length</th>
        <th>Init fault</th>
        <th>Runs</th>
        <th>Voltage</th>
        <th>C value</th>
        <th>Wire Type</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @panels.each do |panel| %>
      <tr>
        <td><%= panel.panel_name %></td>
        <td><%= panel.wire_length %></td>
        <td><%= panel.init_fault %></td>
        <td><%= panel.runs %></td>
        <td><%= panel.voltage %></td>
        <td><%= panel.c_value %></td>
        <td><%= panel.wire_type %></td>
        <td><%= link_to 'Show', panel, class: "btn btn-md btn-info" %></td>
        <td><%= link_to 'Edit', edit_panel_path(panel), class: "btn btn-md btn-info" %></td>
        <td><%= link_to 'Destroy', panel, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="row">
<h2>Results</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Panel Name</th>
      <th>F Value</th>
      <th>M Value</th>
      <th>Final Value</th>
    </tr>
  </thead>

  <tbody>
    <% @panels.each do |panel| %>
      <tr>
        <td><%= panel.panel_name %></td>
        <td><%= number_with_precision(panel.f_value, precision: 2) %></td>
        <td><%= number_with_precision(panel.m_value, precision: 2) %></td>
        <td><%= number_with_precision(panel.final_value, precision: 2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>


