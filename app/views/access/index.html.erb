<% @page_title = "Admin Menu" %>


    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <p class="navbar-text">Currently logged in as: <b><%= session[:user_name].upcase %></b></p>
        </div>
                <div id="navbar" class="navbar-collapse collapse">
                	<form class="navbar-form navbar-right">
                		<div class="form-group">
						<%= form_tag(:controller => 'access', :action => 'attempt_login') do %>
						
							<%= text_field_tag 'user_name', nil, class: "form-control", placeholder: "Username" %>
						</div>
						<div class="form-group">
							<%= password_field_tag 'password', nil, class: "form-control", placeholder: "Password" %>
						</div>
						<%= submit_tag "Log In", class: "btn btn-success" %>
							<% end %>
					</form>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
<div class="jumbotron">
	<div class="container">
		<h1>Admin Menu</h1>
	</div>
</div>
	<div class="container">
		<div class="row">
			<ul class="nav nav-pills nav-justified">
				<li><%= link_to "Login", {:controller => 'access', :action => 'login'}, class: "btn btn-md btn-primary" %></li>
				<li><%= link_to "Manage Users", {:controller => 'users'}, class: "btn btn-md btn-success" %></li>
				<li><%= link_to "Logout", {:action => 'logout'}, class: "btn btn-md btn-primary" %></li>
			</ul>
		</div>
	</div>

	<% if !flash[:notice].blank? %>
<div class="alert alert-danger fade in">
			<%= flash[:notice] %>
</div>
	<% end %>