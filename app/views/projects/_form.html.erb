<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :notes %><br>
        <%= f.text_area(:notes, :size => "40x5") %>
      </div>
      <div class="form-group">
        <%= f.label "Fault at Transformer" %><br>
        <%= f.text_field :init_fault %>
      </div>
    </div>
  </div>
  <div class="row">
      <div class="col-sm-4">
      <div class="form-group">
        <%= f.hidden_field :user_id, :value => @project.user_id %>
      </div>
      <div class="form-group">
        <%= f.label :position %><br>
       <%= f.select :position, 1..@project_count, {}, {class: "form-control"}  %>
      </div>
      <div class="form-group">
        <%= f.submit 'Submit', {:class => 'btn btn-md btn-success'} %> <%= link_to "Back to Projects", {controller: "projects", action: "index",
 user_id: @project.user_id}, class: "btn btn-md btn-default" %>
            </div>
      </div>
    </div>
  </div>
<% end %>
